# .ansible-lint

profile: production

# rulesdir:
#    - ../../ansible-lint-custom-rules/rules/

enable_list:
  - fqcn-builtins  # opt-in
  - no-log-password  # opt-in

skip_list:
  - file_is_small_enough
  - vars_should_not_be_used

warn_list:
  - var-naming[no-role-prefix]
  - jinja[invalid]
  - jinja[spacing]
  - name[template]
  - no-handler

use_default_rules: true
parseable: true
